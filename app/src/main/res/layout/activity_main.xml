<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:elevation="12dp"
    android:outlineAmbientShadowColor="#AD2424"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/img1"
        android:layout_width="417dp"
        android:layout_height="57dp"
        app:srcCompat="@drawable/pr"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="85dp"
        android:layout_marginTop="65dp"
        android:gravity="center"
        android:text="Выберите город"
        android:textAlignment="center"
        android:textColor="#050505"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="120dp"
        android:layout_weight="6"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:background="#000000"
            android:orientation="horizontal"
            android:outlineAmbientShadowColor="@color/black"
            android:touchscreenBlocksFocus="false">

            <ImageButton
                android:id="@+id/image1"
                android:layout_width="132dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="Click"
                android:background="#FFFFFF"
                app:srcCompat="@drawable/bsk" />

            <TextView
                android:id="@+id/text4"
                android:layout_width="wrap_content"
                android:layout_height="102dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:paddingTop="40dp"
                android:text="Борисоглебск"
                android:textColor="#000000"
                android:textSize="32sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:background="#000000"
            android:orientation="horizontal"
            android:outlineAmbientShadowColor="@color/black"
            android:touchscreenBlocksFocus="false">

            <ImageButton
                android:id="@+id/image2"
                android:layout_width="36dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="Click1"
                android:background="#FFFFFF"
                app:srcCompat="@drawable/msk" />

            <TextView
                android:id="@+id/text4"
                android:layout_width="wrap_content"
                android:layout_height="102dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:paddingTop="40dp"
                android:text="Москва"
                android:textColor="#000000"
                android:textSize="32sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:background="#000000"
            android:orientation="horizontal"
            android:outlineAmbientShadowColor="@color/black"
            android:touchscreenBlocksFocus="false">

            <ImageButton
                android:id="@+id/image3"
                android:layout_width="53dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="Click2"
                android:background="#FFFFFF"
                app:srcCompat="@drawable/vrn" />

            <TextView
                android:id="@+id/text4"
                android:layout_width="wrap_content"
                android:layout_height="102dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:paddingTop="40dp"
                android:text="Воронеж"
                android:textColor="#000000"
                android:textSize="32sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:background="#000000"
            android:orientation="horizontal"
            android:outlineAmbientShadowColor="@color/black"
            android:touchscreenBlocksFocus="false">

            <ImageButton
                android:id="@+id/image4"
                android:layout_width="43dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="Click3"
                android:background="#FFFFFF"
                app:srcCompat="@drawable/srt" />

            <TextView
                android:id="@+id/text4"
                android:layout_width="wrap_content"
                android:layout_height="102dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:paddingTop="40dp"
                android:text="Саратов"
                android:textColor="#000000"
                android:textSize="32sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:background="#000000"
            android:orientation="horizontal"
            android:outlineAmbientShadowColor="@color/black"
            android:touchscreenBlocksFocus="false">

            <ImageButton
                android:id="@+id/image5"
                android:layout_width="78dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="Click4"
                android:background="#FFFFFF"
                app:srcCompat="@drawable/vlg" />

            <TextView
                android:id="@+id/text4"
                android:layout_width="wrap_content"
                android:layout_height="102dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:paddingTop="40dp"
                android:text="Волгоград"
                android:textColor="#000000"
                android:textSize="32sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:background="#000000"
            android:orientation="horizontal"
            android:outlineAmbientShadowColor="@color/black"
            android:touchscreenBlocksFocus="false">

            <ImageButton
                android:id="@+id/image6"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="Click5"
                android:background="#FFFFFF"
                app:srcCompat="@drawable/tam" />

            <TextView
                android:id="@+id/text4"
                android:layout_width="wrap_content"
                android:layout_height="102dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:paddingTop="40dp"
                android:text="Тамбов"
                android:textColor="#000000"
                android:textSize="32sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>